        <span></span>
      </div>

      <div class="collapse navbar-collapse justify-content-around">
        <ul class="navbar-nav">

          <!--カスタマーログイン時-->
          <% if customer_signed_in? %>
            <li><div class="header-content"><%= link_to "マイページ", customers_mypage_path %></div></li>
            <li><div class="header-content"><%= link_to "商品一覧", admin_items_path %></div></li>
            <li><div class="header-content"><%= link_to "カート", cart_items_path %></div></li>
            <li><div class="header-content"><%= link_to "ログアウト", destroy_customer_session_path %></div></li>

          <!--管理者ログイン時-->
          <% elsif admin_signed_in? %>
            <li><div class="header-content"><%= link_to "商品一覧", admin_items_path %></div></li>
            <li><div class="header-content"><%= link_to "会員一覧", admin_customers_path %></div></li>
