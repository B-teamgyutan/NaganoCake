      <%= link_to root_path, class: 'nav-link' do %>
        <%= image_tag asset_path('font.png'), size: '108x14' %> <i class="fa-solid fa-cake-candles"></i>
      <% end %>

      <!-- ハンバーガーメニュー -->
      <div class="openbtn navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" onclick="document.querySelector('.openbtn').classList.toggle('active')">
        <span></span>
