<div class="container">
  <div class="row">
    <div class="col">
      <h4>会員情報編集</h4>
      <div class="row">
        <div class="col-md">
          <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
            <table class="table">
              <tr>
                <td style="width: 30%; padding-left: 20px;">氏名</td>
                <td><%= f.text_field :last_name %></td>
                <td><%= f.text_field :first_name %></td>
              </tr>

              <tr>
                <td style="width: 30%; padding-left: 20px;">フリガナ</td>
                <td><%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
              </tr>

              <tr>
                <td style="width: 30%; padding-left: 20px;">郵便番号</td>
                <td><%= f.text_field :post_code %></td>
                <td></td>
              </tr>

              <tr>
                <td style="width: 30%; padding-left: 20px;">住所</td>
                <td><%= f.text_field :address %></td>
                <td></td>
              </tr>

              <tr>
                <td style="width: 30%; padding-left: 20px;">電話番号</td>
                <td><%= f.text_field :phone_number %></td>
                <td></td>
              </tr>

              <tr>
                <td style="width: 30%; padding-left: 20px;">メールアドレス</td>
                <td><%= f.text_field :email %></td>
                <td></td>
              </tr>
            </table>

            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
            <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
