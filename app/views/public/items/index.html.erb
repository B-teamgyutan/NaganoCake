<div class="container">
  <div class="row">
    <div class="col-12">
      <br></br>
      <h4>商品一覧</h4>
      <br></br>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card mb-4">
              <%= link_to item_path(item), class: "card-link" do %>
              <div style="max-width: 100%; max-height: 180px; overflow: hidden; position: relative;">
                <%= image_tag item.image, class: "card-img-top", style: "object-fit: contain; width: 100%; height: 100%; object-position: center;" %>
              </div>
                <div class="card-body">
                  <h6 class="card-title"><%= item.name %></h6>
                  <p class="card-text"><%= item.price %>円</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>