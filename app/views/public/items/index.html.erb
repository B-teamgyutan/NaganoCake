<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>商品一覧</h4>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card mb-4">
              <%= link_to item_path(item), class: "card-link" do %>
                <%= image_tag item.image, class: "card-img-top" %>
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text"><%= item.price %>円</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>