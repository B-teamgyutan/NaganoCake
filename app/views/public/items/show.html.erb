<div class="container">
  <div class="row">
    <div class="col-4" style="max-width: 100%; max-height: 260px; overflow: hidden; position: relative;">
      <%= image_tag @item.image, class: "img-fluid", style: "width: 100%; height: 100%; object-fit: cover; object-position: center;" %>
    </div>
        <div class="col-8">
          <br></br>
          <h4><%= @item.name %></h4>
          <p><%= @item.item_details %></p>
          <p>￥<%= @item.price_with_tax %>(税込)</p>
          <%= form_with model:@cart_item_new, local:true do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit 'カートに入れる', class:"btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

