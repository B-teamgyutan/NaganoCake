<!--/orders-->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>注文履歴</h3>
      <table class="table">
        <thead>
          <tr>
            <td>注文日</td>
            <td>配送先</td>
            <td>注文商品</td>
            <td>支払金額</td>
            <td>ステータス</td>
            <td>注文詳細</td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>

              <td><%= order.address %><%= order.post_code %></td>

              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                <% end %>
              </td>
              <td><%= number_with_delimiter(order.total_payment) %></td>
              <td><%= order.status %></td>
              <td><%= link_to "表示する", order_path(order.id), class: "btn btn-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>