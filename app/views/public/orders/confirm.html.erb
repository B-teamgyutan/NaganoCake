<!--/orders/confirm-->
<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <h4>注文情報確認</h4>

      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag cart_item.item.image, size: "100x80" %>
                <strong><%= cart_item.item.name %></strong>
              </td>
              <td><%= cart_item.item.price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.item.price*cart_item.amount %></td>
            </tr>
          </tbody>
        <% end %>
      </table>

      <!--送料　上のテーブルの右横に配置-->
        <table class="table">
          <tr>
            <td>送料</td>
            <td><%= @shipping_fee %></td>
          </tr>
            <tr>
              <td>商品合計</td>
              <td><%= @cart_items.sum(&:price) %></td>
            </tr>
            <tr>
              <td>請求額</td>
              <td><%= @cart_items.sum(&:price) + @shipping_fee %></td>
            </tr>
        </table>


      <p>支払方法：<%= @payment_method %></p>
        <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
         <%= f.hidden_field :customer_id %>
         <%= f.hidden_field :shipping_cost %>
         <%= f.hidden_field :price %>
         <%= f.hidden_field :payment_method %>
         <%= f.hidden_field :name %>
         <%= f.hidden_field :address %>
         <%= f.hidden_field :post_code %>
         <%= f.hidden_field :status %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
       <% end %>
    </div>
  </div>
</div>

