<!--/orders/confirm-->
<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <h4>注文情報確認</h4>
      
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag cart_item.item.image, size: "100x80" %>
                <strong><%= cart_item.item.name %></strong>
              </td>
              <td><%= number_with_delimiter(cart_item.item.price_with_tax) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= number_with_delimiter(cart_item.item.price_with_tax*cart_item.amount) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>

      <!--送料　上のテーブルの右横に配置-->
        <table class="table table-bordered">
          <tr>
            <td>送料</td>
            <td><%= @shipping_cost %></td>
          </tr>
            <tr>
              <td>商品合計</td>
              <td><%= number_with_delimiter(@cart_items.sum(&:price)) %></td>
            </tr>
            <tr>
              <td>請求額</td>
              <td><%= number_with_delimiter(@cart_items.sum(&:price) + @shipping_cost) %></td>
            </tr>
        </table>

      <p>支払方法：<%= @payment_method %></p>
      <p>お届け先：〒<%= @order.post_code %>　<%= @order.address %></p>

        <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :shipping_cost ,:value => @shipping_cost %>
          <%= f.hidden_field :total_payment ,:value => @cart_items.sum(&:price) + @shipping_cost %>
          <%= f.hidden_field :payment_method ,:value => @payment_method %>
          <%= f.hidden_field :name ,:value => @order.name %>
          <%= f.hidden_field :address ,:value => @order.address %>
          <%= f.hidden_field :post_code ,:value => @order.post_code %>
          <%= f.submit "注文を確定する", class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>

