<div class="container">
  <br></br>
  <h4>ショッピングカート</h4>
      <% if @cart_items.empty? %>
        <div class="empty-cart-message">
        <p>お客様のカートに商品はありません。</p>
        </div>
      <% else %>
        <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
        <br></br>
        <div>
          <table class="table table-bordered">
            <tr class="table-active">
              <th>商品名</th>
              <th>単価(税込み)</th>
              <th>数量</th>
              <th>小計</th>
              <!--タグの中にbrタグを入れることで空白のセルを作れる-->
              <th><br></th>
            </tr>
            <% @sum = 0 %>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td width="400">
                <div style="max-height: 280px; overflow: hidden;">
                  <%= image_tag cart_item.item.image, class: "img-fluid", style: "" %>
                </div>
                  <%= cart_item.item.name %>
                </td>
                <td width="60"><%= number_with_delimiter(cart_item.item.price_with_tax) %></td>
                <td width="100">
                  <%= form_with model: cart_item, url: cart_item_path(cart_item.id), local: true do |f| %>
                    <%= f.select :amount, *[1..10] %>
                    <%= f.submit "変更", class: "btn btn-success" %>
                  <% end %>
                </td>
                <td width="60"><%= number_with_delimiter(cart_item.price) %></td>
                <td width="60"><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "商品を削除しますか？", class: "btn btn-danger" %></td>
              </tr>
              <% number_with_delimiter(@sum += cart_item.price) %>
            <% end %>
          </table>
          <div class="container" style="display: flex; justify-content: flex-end;">
          <div class="col-4 justify-content-end" style="padding: 0; margin: 0;">
            <table class="table">
              <tr>
                <td style="width: 45%; padding-left: 30px;">合計金額</td>
                <td style=""><%= number_with_delimiter(@sum) %></td>
              </tr>
            </table>
          </div>
          </div>
            <%= link_to root_path, class: "btn btn-flat" do %>
              <span>買い物を続ける</span>
          <% end %>
          <%= link_to new_order_path, class: "btn btn-flat" do%>
            <span>次に進む</span>
          <% end %>
      <% end %>
  </div>
</div>
