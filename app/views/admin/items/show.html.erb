<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>商品詳細</h4>
      <div class="row">
        <div class="col-4" style="max-width: 100%; max-height: 260px; overflow: hidden; position: relative;">
          <%= image_tag @item.image, class: "img-fluid", style: "width: 100%; height: 100%; object-fit: cover; object-position: center;" %>
        </div>
        <div class="col-md-6">
          <table class="table">
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.item_details %></td>
            </tr>
            <tr>
              <td>税込価格(税抜価格)</td>
              <td><%= @item.price_with_tax %>(<%= @item.price %>)円</td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= Genre.find(@item.genre_id).name %></td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.is_sold_out == true %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-danger">販売停止</p>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-primary" %>
    </div>
  </div>
</div>