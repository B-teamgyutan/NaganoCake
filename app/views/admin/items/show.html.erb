<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>商品詳細</h4>
      <div class="row">
        <div class="col-4">
          <%= image_tag @item.image, class: "img-fluid", style: "max-width: 100%;" %>
        </div>
        <div class="col-8">
          <p>
            商品名
            <%= @item.name %>
          </p>
          <p>
            商品説明
            <%= @item.item_details %>
          </p>
          <!--<p>-->
          <!--  ジャンル-->
          <!--  < %= @item.genre.name %>-->
          <!--</p>-->
          <p>
            税込み価格（税抜価格）
            <%= @item.price_with_tax %>(<%= @item.price %>)円
          </p>
          <p>
            販売ステータス
            <%= @item.is_sold_out %>
          </p>
        </div>
        <%= link_to "編集する", edit_admin_item_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>