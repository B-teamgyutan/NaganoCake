<div class="container">
  <div class="row">
    <div class="col">
      <h4>商品一覧</h4>
      <%= link_to "新規登録", new_admin_item_path, class:"btn btn-success" %>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name,admin_item_path(item.id) %></td>
              <td><%= number_with_delimiter(item.price) %>円</td>
              <td><%= Genre.find(item.genre_id).name %></td>
              <td>
                <% if item.is_sold_out == true %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-danger">販売停止中</p>
                <% end %>
              </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>