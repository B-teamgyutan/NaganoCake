<div class="container">
  <div class="row">
    <div class="col">
      <h4>会員一覧</h4>
      <br>
        <table class="table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= customer.full_name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.customer_status %></td>
                <td><%= link_to "詳細表示", admin_customer_path(customer), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>