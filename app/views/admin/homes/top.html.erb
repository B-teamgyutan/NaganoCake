<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4>注文履歴一覧</h4>
      <br>
        <table class="table table-hover">
          <thead>
            <tr>
              <td>購入日時</td>
              <td>購入者</td>
              <td>注文個数</td>
              <td>注文ステータス</td>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= order.status %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
